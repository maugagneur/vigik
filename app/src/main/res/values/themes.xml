<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Splashscreen theme -->
    <style name="Theme.Vigik.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primary_light</item>
        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an animated drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.Vigik</item>
    </style>

    <!-- Base application theme -->
    <style name="Theme.Vigik" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/grey</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/primary_light</item>
    </style>
</resources>